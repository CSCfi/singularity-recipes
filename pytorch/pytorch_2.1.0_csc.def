  # nvidia-driver-cuda-525.125.06-1.el8.x86_64
  
  # Install CUDA, CUDNN, NCCL
  cd /etc/yum.repos.d/
  wget https://developer.download.nvidia.com/compute/cuda/repos/rhel8/x86_64/cuda-rhel8.repo
